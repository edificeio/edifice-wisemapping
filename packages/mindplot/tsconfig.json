{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "amd",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strictNullChecks": true,

    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictFunctionTypes": true,

    "rootDirs": [
      "src",
    ]
  },
  "include": [
    "src/**/*", "storybook/src/stories", "libraries",
  ],
  "exclude": [
    "node_modules"
  ]
}